
<div class="mx-auto md:w-2/3 w-full flex flex-col gap-y-4">
    <span class="text-2xl">Votre tableau de bords</span>
    <div data-controller="tabs" data-tabs-default-tab-value="users" class="w-full">
        <div class="flex flex-row justify-between w-full">
            <button class="w-full border border-grey" id="users" data-tabs-target="btn" data-action="click->tabs#select">Utilisateurs</button>
            <button class="w-full border border-grey" id="experts" data-tabs-target="btn" data-action="click->tabs#select">Experts</button>
            <button class="w-full border border-grey" id="admin" data-tabs-target="btn" data-action="click->tabs#select">Admin</button>
        </div>
        <div data-tabs-target="tab" id="users">
            <table class="w-full">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Connexion</th>
                </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td class="text-center"><%= user.id %></td>
                        <td class="text-center"><%= user.first_name %></td>
                        <td class="text-center"><%= user.last_name %></td>
                        <td class="text-center"><%= user.email %></td>
                        <td class="text-center"> 
                            <%= button_to "Se connecter", impersonate_url(user), method: :post, class: "text-white bg-sky-400 px-3 py-2 rounded-xl" %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
        <div data-tabs-target="tab" id="experts">
            <table class="w-full">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Connexion</th>
                </tr>
                </thead>
                <tbody>
                <% @experts.each do |expert| %>
                    <tr>
                        <td class="text-center"><%= expert.id %></td>
                        <td class="text-center"><%= expert.first_name %></td>
                        <td class="text-center"><%= expert.last_name %></td>
                        <td class="text-center"><%= expert.email %></td>
                        <td class="text-center"> 
                            <%= button_to "Se connecter", impersonate_url(expert), method: :post, class: "text-white bg-sky-400 px-3 py-2 rounded-xl" %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
        <div data-tabs-target="tab" id="admin">
            <table class="w-full">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Connexion</th>
                </tr>
                </thead>
                <tbody>
                <% @admins.each do |admin| %>
                    <tr>
                        <td class="text-center"><%= admin.id %></td>
                        <td class="text-center"><%= admin.first_name %></td>
                        <td class="text-center"><%= admin.last_name %></td>
                        <td class="text-center"><%= admin.email %></td>
                        <td class="text-center"> 
                            <%= button_to "Se connecter", impersonate_url(admin), method: :post, class: "text-white bg-sky-400 px-3 py-2 rounded-xl" %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>